<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/div"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:minWidth="100dp"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/dot"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:minWidth="100dp"
        android:text="."
        app:layout_constraintBaseline_toBaselineOf="@+id/btnequal"
        app:layout_constraintStart_toEndOf="@+id/btnequal" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="69dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:minWidth="100dp"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        app:layout_constraintStart_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/sub"
        android:layout_width="67dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:minWidth="100dp"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/dot"
        app:layout_constraintStart_toEndOf="@+id/dot" />

    <Button
        android:id="@+id/plus"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:minWidth="100dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button3" />

    <Button
        android:id="@+id/button8"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:minWidth="100dp"
        android:text="8"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/mul"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:minWidth="100dp"
        android:text="*"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/button9"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:minWidth="100dp"
        android:text="9"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/button7"
        android:layout_width="66dp"
        android:layout_height="58dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:minWidth="100dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newno" />

    <Button
        android:id="@+id/button5"
        android:layout_width="63dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:minWidth="100dp"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="61dp"
        android:layout_height="57dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:minWidth="100dp"
        android:text="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button2"
        android:layout_width="72dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:minWidth="100dp"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:minWidth="100dp"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="65dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:minWidth="100dp"
        android:text="4"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button5" />

    <EditText
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:focusable="false"
        tools:focusableInTouchMode="true" />

    <Button
        android:id="@+id/button0"
        android:layout_width="68dp"
        android:layout_height="52dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:minWidth="100dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:minWidth="100dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <EditText
        android:id="@+id/newno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/operatjon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/newno"
        app:layout_constraintEnd_toStartOf="@+id/newno" />
</android.support.constraint.ConstraintLayout>